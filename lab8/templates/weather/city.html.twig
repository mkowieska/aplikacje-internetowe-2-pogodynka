{% extends 'base.html.twig' %}

{# @var location \App\Entity\Location #}
{# @var weather \App\Entity\Weather #}

{% block title %}Weather in {{ location.city }}, {{ location.country }}{% endblock %}

{% block body %}
<div class="py-4">
    <h1 class="mb-4">Weather in {{ location.city }}, {{ location.country }}</h1>

    <ul class="list-group">
        {% for measurement in measurements %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>{{ measurement.date|date('d.m.Y') }}</span>
                <span class="badge bg-primary rounded-pill">{{ measurement.celsius }}&deg;C</span>
            </li>
        {% else %}
            <li class="list-group-item">No measurements found.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}

