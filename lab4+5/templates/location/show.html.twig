{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1 class="mb-4">Location</h1>

    <table class="table table-borderless">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ location.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ location.country }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.longitude }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-secondary" href="{{ path('app_location_index') }}">Back to list</a>
    <a class="btn btn-primary" href="{{ path('app_location_edit', {'id': location.id}) }}">Edit</a>
    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
